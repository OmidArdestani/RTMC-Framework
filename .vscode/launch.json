{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RT-Micro-C: Compile Demo",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": [
                "RTMC_Compiler\\examples\\Send-ADC-To-UART\\main.rtmc",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "purpose": ["debug-in-terminal"]
        },
        {
            "name": "RT-Micro-C: Run Demo",
            "type": "debugpy",
            "request": "launch",
            "program": "RTMC_Compiler/vm_runner.py",
            "args": [
                "RTMC_Compiler\\examples\\Send-ADC-To-UART\\main.vmb"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "purpose": ["debug-in-terminal"]
        },
        {
            "name": "RT-Micro-C: Compile and Run Demo",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": [
                "RTMC_Compiler\\examples\\Specific-Test\\sb_main.rtmc",
                "-v", "--run", "--release"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "purpose": ["debug-in-terminal"]
        },
        {
            "name": "RT-Micro-C: Compile and Debug Demo",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": [
                "RTMC_Compiler\\examples\\Specific-Test\\sb_main.rtmc",
                "-v", "--run"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "purpose": ["debug-in-terminal"]
        }
    ]
}
