

#include "definitions.rtmc"

void read_adc_task_run()
{
    int sensorPin = 25;
    int readingId = 0;
    
    // HW_ADC_INIT(sensorPin);

    int counter = 0;
    while(1)
    {
        RTOS_DELAY_MS(500);
        DBG_PRINT("adc: reading");

        counter++;
        if (counter == 10)
        {
            break;
        }
    }
    
    DBG_PRINTF("ADC Task started on pin {0}", sensorPin);
}
